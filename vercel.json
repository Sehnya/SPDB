{
  "version": 2,
  "buildCommand": "bun install && bun run build.ts",
  "outputDirectory": "dist",
  "devCommand": "bun dev",
  "functions": {
    "runtime": "nodejs20.x"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
